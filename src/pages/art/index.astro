---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION, GRAPHQL_URL } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

// const posts = (await getCollection('blog')).sort(
// 	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
// );

const response = await fetch(GRAPHQL_URL,
  {
    method: 'POST',
    headers: {'Content-Type':'application/json'},
    body: JSON.stringify({
      query: `
        query GetPosts {
				  posts(first:100) {
				    nodes{
				  		id
				      title
				      uri
					  excerpt
				      featuredImage{
				        node{
				          mediaItemUrl
				        }
				      }
				    }
				  }
				}	  
      `
    }),
  });


  
const posts = await response.json();
// console.log("posts from Art landing:", JSON.stringify(posts.data.posts.nodes))
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>

			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(32% - 1rem);
				line-height:1.35;
				p {
					margin:0;
					font-size: 1.1rem;
				}
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
				text-align: center;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
				p {
					margin:0;
					/* font-size: 1.25em; */
				}
			}
			ul li:first-child img {
				width: 100%;
				max-height:450px;
				object-fit: cover;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
				max-height: 300px;
				object-fit: cover;
			}
			ul li a {
				display: block;
				color: black;

			}
			.title {
				margin: 0;
				margin-bottom: 5px;
				color: rgb(var(--black));
				font-size: 1.5rem;
				line-height: 1.25;
				text-wrap: pretty;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}

			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
					margin: 0;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					/* font-size: 1.563em; */
				}
				ul li img {
					width: 100%;
					max-height:auto;
					object-fit: cover;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					<!-- {
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									<img width={720} height={360} src={post.data.heroImage} alt="" />
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					} -->
					{
						posts.data.posts.nodes.map((post:any) => (
							<li>
								<a href=`/art${post.uri}`>
									{post.featuredImage &&
										<img src={post.featuredImage.node.mediaItemUrl} alt="" />
									}
									<h4 class="title">{post.title}</h4>
									<p class="date" set:html={post.excerpt}></p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
